{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/api/$1"
    }
  ],
  "env": {
    "RAZORPAY_KEY_ID": "@RAZORPAY_KEY_ID",
    "RAZORPAY_SECRET": "@RAZORPAY_SECRET"
  }
}
